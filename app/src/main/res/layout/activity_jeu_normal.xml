<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:orientation="vertical"
    tools:context=".activities.JeuNormalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/saisieMot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center_vertical"
            android:hint="Saisir un mot ..."
            android:inputType="text"
            android:background="@drawable/bg_edittext"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@drawable/btn_validate_word_rnd"
            android:gravity="center_horizontal|center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/activityJeuNormal_btnValiderMot" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:minHeight="450dp"
        android:background="@drawable/bg_parametre_partie_rnd"
        android:orientation="vertical">

    </LinearLayout>

    <GridView
        android:id="@+id/word_find"
        android:numColumns="3"
        android:gravity="center"
        android:stretchMode="columnWidth"
        android:columnWidth="30dp"
        android:layout_width="match_parent"
        android:scrollbars="horizontal"
        android:layout_height="150dp">

    </GridView>

</LinearLayout>