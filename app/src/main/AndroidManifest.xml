<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="charldevelopment.melimelo">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.AccueilActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.JeuNormalActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.ParametreActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.ParametresPartieActivity"
            android:screenOrientation="portrait"></activity>
    </application>
    <uses-permission android:name="android.permission.VIBRATE"></uses-permission>

</manifest>